#!/bin/bash

SHUF=`which gshuf 2> /dev/null || which shuf 2>/dev/null` 

function saying {
    cat <<EOF | $SHUF -n1 -
Such command!
Much useful!
So typo
Wow!
no filtr
such tired
EOF
}

saying
cat <<EOF
